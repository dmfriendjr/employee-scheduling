<div id = "login-background"></div>

<div class = "container-login">
  <div class = "wrap-login">
    <div class = "login-pic col-md-6 col-s-12">
      <img src="../../styles/assets/login-header.png" alt="IMG">
    </div>
    <div class="col-md-6 col-s-12">
      <form action="/login" method="POST">
        {{#if showResetForm}}
        <h1>Reset</h1>
        {{else}}
        <h4 class="login-form-title">
          Member Login
        </h4>
        {{message}}
        <div class = "login-input-wrap">
          <input class="login-input" type="text" name="username" placeholder="Username">
          <span class="focus-login-input"></span>
          <span class="symbol-login-input">
            <i class="far fa-user"></i>
          </span>
        </div>

        <div class = "login-input-wrap">
          <input class="login-input" type="password" name="password" placeholder="Password">
          <span class="focus-login-input"></span>
          <span class="symbol-login-input">
            <i class="fas fa-lock" aria-hidden="true"></i>
          </span>
        </div>

        <div class = "container-login-form-btn">
          <button class="login-btn" type="submit">
            Login
          </button>
        </div>

        <div class="text-center">
          <span>
            Forgot
          </span>
          <a class="link" href="/resetRequest">
            Password?
          </a>
        </div>

        <div class="text-center">
          <a class="link" href="/signup">
          Create your Account
            <i class="fas fa-long-arrow-alt-right"></i>
          </a>
        </div>
      </form>
      </div>

        {{/if}}
      {{!-- <h1>Home</h1>
      <a href="/login">Login</a>
      <a href="/signup">Signup</a>
      <a href="/profile">Profile</a> --}}

</div>